<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shawpoo.simplehencoder.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleHenCoder">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".xfermode.sample.XfermodeListActivity" />
        <activity android:name=".animation.sample.SampleAnimationActivity" />
        <activity android:name=".text.sample.ProductListActivity" />
        <activity android:name=".bitmapanddrawable.sample.DrawableActivity" />

        <meta-data
            android:name="com.shawpoo.simplehencoder.app.util.MyAppGlideModule"
            android:value="AppGlideModule" />
    </application>
</manifest>